# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lucine_chatbot"

# Server
NODE_ENV="development"
PORT=3001

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"

# Email (for notifications)
EMAIL_FROM="noreply@lucine.it"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Frontend URLs
SHOPIFY_SITE_URL="https://lucine.it"
WIDGET_URL="http://localhost:5173"
DASHBOARD_URL="http://localhost:5174"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:5174,https://lucine.it"

# Session & Chat Settings
SESSION_TTL_HOURS=24
CHAT_TIMEOUT_MINUTES=5
OPERATOR_TIMEOUT_SECONDS=30

# Knowledge Base
KB_CONFIDENCE_THRESHOLD=0.7
KB_MAX_RESULTS=5
